DROP TABLE IF EXISTS LOAN;

CREATE TABLE LOAN(
	LOAN_ID INT PRIMARY KEY AUTO_INCREMENT,
	CUSTOMER_ID INT,
	LOAN_TYPE VARCHAR2(100),
	START_DATE DATE,
	TOTAL_AMOUNT INT,
	PAID_AMOUNT INT,
	OUTSTANDING_AMOUNT INT,
	CREATED_TS DATE
);

INSERT INTO LOAN(LOAN_ID,CUSTOMER_ID,LOAN_TYPE,START_DATE,TOTAL_AMOUNT,PAID_AMOUNT,OUTSTANDING_AMOUNT,CREATED_TS) VALUES
(123, SELECT CUSTOMER_ID FROM CUSTOMER WHERE NAME = 'Lavanya', 'Education', sysdate, 1000000, 700000, 300000, sysdate);

